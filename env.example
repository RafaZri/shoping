# Production Environment Variables
# Copy this to .env.local and fill in your actual values

# Database (if you add one later)
DATABASE_URL=your_database_url_here

# Email Configuration
EMAIL_USER=your_email_here
EMAIL_PASSWORD=your_email_password_here
JWT_SECRET=your_jwt_secret_here
NEXT_PUBLIC_BASE_URL=your_base_url_here

# Security
RATE_LIMIT_MAX_REQUESTS=10
RATE_LIMIT_WINDOW_MS=60000
ALLOWED_ORIGINS=your_allowed_origins_here

# Analytics (optional)
GOOGLE_ANALYTICS_ID=your_ga_id_here
GOOGLE_TAG_MANAGER_ID=your_gtm_id_here

# Monitoring
SENTRY_DSN=your_sentry_dsn_here

# Email (for contact forms, etc.)
SMTP_HOST=your_smtp_host
SMTP_PORT=587
SMTP_USER=your_smtp_user
SMTP_PASS=your_smtp_password

# Payment Processing (if you add e-commerce)
STRIPE_PUBLIC_KEY=your_stripe_public_key
STRIPE_SECRET_KEY=your_stripe_secret_key

# CDN (optional)
CDN_URL=your_cdn_url_here